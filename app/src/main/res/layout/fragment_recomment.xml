    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="选择活动"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <org.angmarch.views.NiceSpinner
        android:id="@+id/spinner_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        app:arrowTint="@color/orange"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView16"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:textTint="@color/orange" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="活动信息"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="@+id/tv_reconment" />

    <TextView
        android:id="@+id/tv_reconment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="5dp"
        android:fadeScrollbars="true"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:text="展示活动信息..."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <Button
        android:id="@+id/btn_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:text="酒店"
        android:background="@drawable/bg_btn"
        app:layout_constraintEnd_toStartOf="@+id/btn_food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reconment" />

    <Button
        android:id="@+id/btn_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:text="美食"
        android:background="@drawable/bg_btn"
        app:layout_constraintEnd_toStartOf="@+id/btn_happy"
        app:layout_constraintStart_toEndOf="@+id/btn_hotel"
        app:layout_constraintTop_toBottomOf="@+id/tv_reconment" />

    <Button
        android:id="@+id/btn_happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="娱乐"
        android:background="@drawable/bg_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_food"
        app:layout_constraintTop_toTopOf="@+id/btn_food" />

 <ListView
     android:id="@+id/list_reconment"
     android:layout_width="match_parent"
     android:layout_height="310dp"
     android:layout_marginTop="10dp"
     app:layout_constraintTop_toBottomOf="@+id/btn_food" />

